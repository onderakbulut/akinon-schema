{
  "name": "akinon-schema",
  "displayName": "Akinon Schema",
  "description": "Akinon schema generator and widget auto-completion",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets",
    "Other",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "extensions": [".json"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "eslint": "^8.54.0"
  }
} 